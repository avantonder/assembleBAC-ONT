/*
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Nextflow config file for running full-size tests
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Defines input files and everything required to run a full size pipeline test.

    Use as follows:
        nextflow run avantonder/assembleBAC-ONT -profile test_full,<docker/singularity> --outdir <OUTDIR>

----------------------------------------------------------------------------------------
*/

params {
    config_profile_name        = 'Full test profile'
    config_profile_description = 'Full test dataset to check pipeline function'

    // Input data for full size test
    // TODO avantonder: Specify the paths to your full test data ( on avantonder/test-datasets or directly in repositories, e.g. SRA)
    // TODO avantonder: Give any required params for the test so that command line flags are not needed
    input = 'https://raw.githubusercontent.com/avantonder/test-datasets/viralrecon/samplesheet/samplesheet_full_illumina_amplicon.csv'

    // Genome references
    genome = 'R64-1-1'
}
